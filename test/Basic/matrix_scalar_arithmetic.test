#--- source.hlsl

RWBuffer<int> In : register(u0);
RWBuffer<int> DivOut : register(u1);
RWBuffer<int> MulOut : register(u2);
RWBuffer<int> AddOut : register(u3);
RWBuffer<int> SubOut : register(u4);

[numthreads(1,1,1)]
void main() {
  int2x3 A = int2x3(In[0], In[1], In[2], 
                        In[3], In[4], In[5]); 
  
  DivOut[0] = A[0][0] / 2;
  DivOut[1] = A[0][1] / 2;
  DivOut[2] = A[0][2] / 2;
  DivOut[3] = A[1][0] / 2;
  DivOut[4] = A[1][1] / 2;
  DivOut[5] = A[1][2] / 2;

  MulOut[0] = A[0][0] * 2;
  MulOut[1] = A[0][1] * 2;
  MulOut[2] = A[0][2] * 2;
  MulOut[3] = A[1][0] * 2;
  MulOut[4] = A[1][1] * 2;
  MulOut[5] = A[1][2] * 2;

  AddOut[0] = A[0][0] + 1;
  AddOut[1] = A[0][1] + 1;
  AddOut[2] = A[0][2] + 1;
  AddOut[3] = A[1][0] + 1;
  AddOut[4] = A[1][1] + 1;
  AddOut[5] = A[1][2] + 1;

  SubOut[0] = A[0][0] - 1;
  SubOut[1] = A[0][1] - 1;
  SubOut[2] = A[0][2] - 1;
  SubOut[3] = A[1][0] - 1;
  SubOut[4] = A[1][1] - 1;
  SubOut[5] = A[1][2] - 1;

}

//--- pipeline.yaml

