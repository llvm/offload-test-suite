  - Name: DivOut
    Format: Int32
    Data: [ 0,0,0,0,0,0 ]
  - Name: MulOut
    Format: Int32
    Data: [ 0,0,0,0,0,0 ]
  - Name: AddOut
    Format: Int32
    Data: [ 0,0,0,0,0,0 ]
  - Name: SubOut
    Format: Int32
    Data: [ 0,0,0,0,0,0 ]
DescriptorSets:
  - Resources:
    - Name: In
      Kind: RWBuffer
      DirectXBinding:
        Register: 0
        Space: 0
      VulkanBinding:
        Binding: 0
    - Name: DivOut
      Kind: RWBuffer
      DirectXBinding:
        Register: 1
        Space: 0
      VulkanBinding:
        Binding: 1
    - Name: MulOut
      Kind: RWBuffer
      DirectXBinding:
        Register: 2
        Space: 0
      VulkanBinding:
        Binding: 2
    - Name: AddOut
      Kind: RWBuffer
      DirectXBinding:
        Register: 3
        Space: 0
      VulkanBinding:
        Binding: 3
    - Name: SubOut
