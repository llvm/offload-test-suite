#--- source.hlsl
StructuredBuffer<float4> In  : register(t0);
RWStructuredBuffer<float4> Out1 : register(u1); // test scalar
RWStructuredBuffer<float4> Out2 : register(u2); // test float2
RWStructuredBuffer<float4> Out3 : register(u3); // test float3
RWStructuredBuffer<float4> Out4 : register(u4); // test float4
RWStructuredBuffer<float4> Out5 : register(u5); // constant folding

[numthreads(4,1,1)]
void main(uint3 tid : SV_GroupThreadID)
{
    float4 v = In[0];

    // Mask per "active lane set": only <=N lanes contribute
    float s1 = WaveActiveSum((tid.x <= 0) ? v.x : 0);
    float s2 = WaveActiveSum((tid.x <= 1) ? v.x : 0);
    float s3 = WaveActiveSum((tid.x <= 2) ? v.x : 0);
    float s4 = WaveActiveSum((tid.x <= 3) ? v.x : 0);

    float2 v2_1 = WaveActiveSum((tid.x <= 0) ? v.xy : float2(0,0));
    float2 v2_2 = WaveActiveSum((tid.x <= 1) ? v.xy : float2(0,0));
    float2 v2_3 = WaveActiveSum((tid.x <= 2) ? v.xy : float2(0,0));
    float2 v2_4 = WaveActiveSum((tid.x <= 3) ? v.xy : float2(0,0));

    float3 v3_1 = WaveActiveSum((tid.x <= 0) ? v.xyz : float3(0,0,0));
    float3 v3_2 = WaveActiveSum((tid.x <= 1) ? v.xyz : float3(0,0,0));
    float3 v3_3 = WaveActiveSum((tid.x <= 2) ? v.xyz : float3(0,0,0));
    float3 v3_4 = WaveActiveSum((tid.x <= 3) ? v.xyz : float3(0,0,0));

    float4 v4_1 = WaveActiveSum((tid.x <= 0) ? v : float4(0,0,0,0));
    float4 v4_2 = WaveActiveSum((tid.x <= 1) ? v : float4(0,0,0,0));
    float4 v4_3 = WaveActiveSum((tid.x <= 2) ? v : float4(0,0,0,0));
    float4 v4_4 = WaveActiveSum((tid.x <= 3) ? v : float4(0,0,0,0));

    float scalars[4] = { s1, s2, s3, s4 };
    float2 vec2s [4] = { v2_1, v2_2, v2_3, v2_4 };
    float3 vec3s [4] = { v3_1, v3_2, v3_3, v3_4 };
    float4 vec4s [4] = { v4_1, v4_2, v4_3, v4_4 };

    int idx = 3 - tid.x; // lane0→index3 (4 lanes), lane3→index0 (1 lane)

    Out1[tid.x].x   = scalars[idx];
    Out2[tid.x].xy  = vec2s[idx];
    Out3[tid.x].xyz = vec3s[idx];
    Out4[tid.x]     = vec4s[idx];

    // constant folding case
    Out5[0] = WaveActiveSum(float4(1,2,3,4));
}

