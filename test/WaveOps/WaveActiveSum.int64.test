#--- source.hlsl
StructuredBuffer<int64_t4> In  : register(t0);
RWStructuredBuffer<int64_t4> Out1 : register(u1); // test scalar
RWStructuredBuffer<int64_t4> Out2 : register(u2); // test int64_t2
RWStructuredBuffer<int64_t4> Out3 : register(u3); // test int64_t3
RWStructuredBuffer<int64_t4> Out4 : register(u4); // test int64_t4
RWStructuredBuffer<int64_t4> Out5 : register(u5); // constant folding


// uints
StructuredBuffer<uint64_t4> UIn  : register(t6);
RWStructuredBuffer<uint64_t4> UOut1 : register(u7);
RWStructuredBuffer<uint64_t4> UOut2 : register(u8);
RWStructuredBuffer<uint64_t4> UOut3 : register(u9);
RWStructuredBuffer<uint64_t4> UOut4 : register(u10);
RWStructuredBuffer<uint64_t4> UOut5 : register(u11);

[numthreads(4,1,1)]
void main(int3 tid : SV_GroupThreadID)
{
    int64_t4 v = In[0];

    // Mask per "active lane set": only <=N lanes contribute
    int64_t s1 = WaveActiveSum((tid.x <= 0) ? v.x : 0);
    int64_t s2 = WaveActiveSum((tid.x <= 1) ? v.x : 0);
    int64_t s3 = WaveActiveSum((tid.x <= 2) ? v.x : 0);
    int64_t s4 = WaveActiveSum((tid.x <= 3) ? v.x : 0);

    int64_t2 v2_1 = WaveActiveSum((tid.x <= 0) ? v.xy : int64_t2(0,0));
    int64_t2 v2_2 = WaveActiveSum((tid.x <= 1) ? v.xy : int64_t2(0,0));
    int64_t2 v2_3 = WaveActiveSum((tid.x <= 2) ? v.xy : int64_t2(0,0));
    int64_t2 v2_4 = WaveActiveSum((tid.x <= 3) ? v.xy : int64_t2(0,0));

    int64_t3 v3_1 = WaveActiveSum((tid.x <= 0) ? v.xyz : int64_t3(0,0,0));
    int64_t3 v3_2 = WaveActiveSum((tid.x <= 1) ? v.xyz : int64_t3(0,0,0));
    int64_t3 v3_3 = WaveActiveSum((tid.x <= 2) ? v.xyz : int64_t3(0,0,0));
    int64_t3 v3_4 = WaveActiveSum((tid.x <= 3) ? v.xyz : int64_t3(0,0,0));

    int64_t4 v4_1 = WaveActiveSum((tid.x <= 0) ? v : int64_t4(0,0,0,0));
    int64_t4 v4_2 = WaveActiveSum((tid.x <= 1) ? v : int64_t4(0,0,0,0));
    int64_t4 v4_3 = WaveActiveSum((tid.x <= 2) ? v : int64_t4(0,0,0,0));
    int64_t4 v4_4 = WaveActiveSum((tid.x <= 3) ? v : int64_t4(0,0,0,0));

    int64_t scalars[4] = { s1, s2, s3, s4 };
    int64_t2 vec2s [4] = { v2_1, v2_2, v2_3, v2_4 };
    int64_t3 vec3s [4] = { v3_1, v3_2, v3_3, v3_4 };
    int64_t4 vec4s [4] = { v4_1, v4_2, v4_3, v4_4 };

    int64_t idx = 3 - tid.x;

    Out1[tid.x].x   = scalars[idx];
    Out2[tid.x].xy  = vec2s[idx];
    Out3[tid.x].xyz = vec3s[idx];
    Out4[tid.x]     = vec4s[idx];

    // constant folding case
    Out5[0] = WaveActiveSum(int64_t4(1,2,3,4));

    // UINT case

    uint64_t4 uv = UIn[0];

    // Mask per "active lane set": only <=N lanes contribute
    uint64_t us1 = WaveActiveSum((tid.x <= 0) ? uv.x : 0);
    uint64_t us2 = WaveActiveSum((tid.x <= 1) ? uv.x : 0);
    uint64_t us3 = WaveActiveSum((tid.x <= 2) ? uv.x : 0);
    uint64_t us4 = WaveActiveSum((tid.x <= 3) ? uv.x : 0);

    uint64_t2 uv2_1 = WaveActiveSum((tid.x <= 0) ? uv.xy : uint64_t2(0,0));
    uint64_t2 uv2_2 = WaveActiveSum((tid.x <= 1) ? uv.xy : uint64_t2(0,0));
    uint64_t2 uv2_3 = WaveActiveSum((tid.x <= 2) ? uv.xy : uint64_t2(0,0));
    uint64_t2 uv2_4 = WaveActiveSum((tid.x <= 3) ? uv.xy : uint64_t2(0,0));

    uint64_t3 uv3_1 = WaveActiveSum((tid.x <= 0) ? uv.xyz : uint64_t3(0,0,0));
    uint64_t3 uv3_2 = WaveActiveSum((tid.x <= 1) ? uv.xyz : uint64_t3(0,0,0));
    uint64_t3 uv3_3 = WaveActiveSum((tid.x <= 2) ? uv.xyz : uint64_t3(0,0,0));
    uint64_t3 uv3_4 = WaveActiveSum((tid.x <= 3) ? uv.xyz : uint64_t3(0,0,0));

    uint64_t4 uv4_1 = WaveActiveSum((tid.x <= 0) ? uv : uint64_t4(0,0,0,0));
    uint64_t4 uv4_2 = WaveActiveSum((tid.x <= 1) ? uv : uint64_t4(0,0,0,0));
    uint64_t4 uv4_3 = WaveActiveSum((tid.x <= 2) ? uv : uint64_t4(0,0,0,0));
    uint64_t4 uv4_4 = WaveActiveSum((tid.x <= 3) ? uv : uint64_t4(0,0,0,0));

    uint64_t uscalars[4] = { us1, us2, us3, us4 };
    uint64_t2 uvec2s [4] = { uv2_1, uv2_2, uv2_3, uv2_4 };
    uint64_t3 uvec3s [4] = { uv3_1, uv3_2, uv3_3, uv3_4 };
    uint64_t4 uvec4s [4] = { uv4_1, uv4_2, uv4_3, uv4_4 };

    UOut1[tid.x].x   = uscalars[idx];
    UOut2[tid.x].xy  = uvec2s[idx];
    UOut3[tid.x].xyz = uvec3s[idx];
    UOut4[tid.x]     = uvec4s[idx];

    // constant folding case
    UOut5[0] = WaveActiveSum(uint64_t4(1,2,3,4));
}

