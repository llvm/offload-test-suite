    Stride: 4
    Fill: 0
    Size: 48
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [1600, 4, 0, 1616, 4, 0, 3456, 1, 0, 3472, 1, 0, 4672, 9, 0, 4672, 9, 0, 4676, 9, 0, 4676, 9, 0, 4680, 9, 0, 4680, 9, 0, 4688, 9, 0, 4688, 9, 0, 4692, 9, 0, 4692, 9, 0, 4696, 9, 0, 4696, 9, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
