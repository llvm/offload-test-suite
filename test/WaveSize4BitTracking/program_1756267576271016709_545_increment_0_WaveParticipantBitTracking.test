    Stride: 4
    Fill: 0
    Size: 18
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [1296, 1, 0, 1312, 1, 0, 5200, 5, 0, 5200, 5, 0, 5216, 5, 0, 5216, 5, 0]
  - Name: _wave_op_index
