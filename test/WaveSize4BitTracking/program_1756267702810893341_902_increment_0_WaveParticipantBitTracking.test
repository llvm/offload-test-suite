    Stride: 4
    Fill: 0
    Size: 21
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [1940, 4, 0, 1944, 4, 0, 1948, 4, 0, 1956, 4, 0, 1960, 4, 0, 1964, 4, 0, 3008, 4, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
