    Stride: 4
    Fill: 0
    Size: 30
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [1104, 9, 0, 1104, 9, 0, 1120, 9, 0, 1120, 9, 0, 2960, 4, 0, 2964, 4, 0, 2968, 4, 0, 2976, 4, 0, 2980, 4, 0, 2984, 4, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
Results:
  - Result: BitTrackingValidation
    Rule: BufferParticipantPattern
    GroupSize: 3
    Actual: _participant_bit
    Expected: expected_bit_patterns
DescriptorSets:
  - Resources:
    - Name: _participant_bit
      Kind: RWStructuredBuffer
