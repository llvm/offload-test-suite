    Data: [576, 9, 0, 576, 9, 0, 2704, 4, 0, 2720, 4, 0, 2736, 4, 0, 6736, 4, 0, 6752, 4, 0, 6768, 4, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
Results:
