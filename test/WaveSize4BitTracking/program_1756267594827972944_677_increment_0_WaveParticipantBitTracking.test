    Stride: 4
    Fill: 0
    Size: 6
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [1296, 8, 0, 6032, 8, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
