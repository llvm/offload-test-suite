    Data: [1024, 10, 0, 1024, 10, 0, 1040, 10, 0, 1040, 10, 0, 1056, 10, 0, 1056, 10, 0, 2752, 4, 0, 2768, 4, 0, 2784, 4, 0, 3328, 4, 0, 3344, 4, 0, 3360, 4, 0, 4416, 4, 0, 4432, 4, 0, 4448, 4, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
