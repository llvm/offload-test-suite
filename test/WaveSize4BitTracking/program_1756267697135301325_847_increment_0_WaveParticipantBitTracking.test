    Stride: 4
    Fill: 0
    Size: 27
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [576, 5, 0, 576, 5, 0, 1216, 1, 0, 2112, 4, 0, 2560, 8, 0, 3904, 1, 0, 5760, 1, 0, 5776, 1, 0, 5792, 1, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
Results:
  - Result: BitTrackingValidation
    Rule: BufferParticipantPattern
    GroupSize: 3
    Actual: _participant_bit
    Expected: expected_bit_patterns
DescriptorSets:
  - Resources:
    - Name: _participant_bit
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 0
