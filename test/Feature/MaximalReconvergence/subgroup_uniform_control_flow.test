#--- source.hlsl
RWStructuredBuffer<float> Out : register(u0);

[numthreads(8,1,1)]
void main(uint3 TID : SV_GroupThreadID) {
    float maxActiveLaneCount = min(WaveGetLaneCount(), 8);
    float div1 = 1.0/maxActiveLaneCount;
    float div2 = 2.0/maxActiveLaneCount;
    float div4 = 4.0/maxActiveLaneCount;
    float div8 = 8.0/maxActiveLaneCount;

    float result = 0;

    // First non-uniform branch
    if (TID.x % 2 == 0) {
        // Second non-uniform branch
        if (TID.x % 4 == 0) {
            result += WaveActiveSum(div4);
        } else {
            result += WaveActiveSum(div8);
        }
        // Must reconverge here with maximal reconvergence
        result += WaveActiveSum(div2);
    }

    // Must reconverge here with maximal reconvergence
    result += WaveActiveSum(div1);
    Out[TID.x] = result;
}

//--- pipeline.yaml

---
Shaders:
  - Stage: Compute
    Entry: main
    DispatchSize: [1, 1, 1]
Buffers:
  - Name: Out
    Format: Float32
    Data: [ 0, 0, 0, 0, 0, 0, 0, 0 ]
DescriptorSets:
  - Resources:
    - Name: Out
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 0
        Space: 0
      VulkanBinding:
        Binding: 0
...

#--- end
