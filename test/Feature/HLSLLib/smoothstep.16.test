  - Name: Min3D
    Format: Float16
    Stride: 8
    Data: [ 0x3800, 0xb400, 0x3a00, 0x0 ]
    # 0.5, -0.25, 0.75, 0.0
  - Name: Min4D
    Format: Float16
    Stride: 8
    Data: [ 0x3800, 0xb400, 0x3a00, 0xb800]
    # 0.5, -0.25, 0.75, -0.5
  - Name: Max2D
    Format: Float16
    Stride: 4
    Data: [ 0x39a8, 0x39a8 ]
    # 0.70703125, 0.70703125
