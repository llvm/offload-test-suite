#--- source.hlsl

StructuredBuffer<half4> In : register(t0);

RWStructuredBuffer<half4> Out : register(u1);

[numthreads(1,1,1)]
void main() {
  Out[0] = sin(In[0]);
  half4 Tmp = {sin(In[1].xyz), sin(In[1].w)};
  Out[1] = Tmp;
  half4 Tmp2 = {sin(In[2].xy), sin(In[2].zw)};
  Out[2] = Tmp2;
  Out[3] = sin(In[3]);
  Out[4] = sin(In[4]);
}


//--- pipeline.yaml

