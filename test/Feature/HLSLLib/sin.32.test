#--- source.hlsl

StructuredBuffer<float4> In : register(t0);

RWStructuredBuffer<float4> Out : register(u1);

[numthreads(1,1,1)]
void main() {
  Out[0] = sin(In[0]);
  float4 Tmp = {sin(In[1].xyz), sin(In[1].w)};
  Out[1] = Tmp;
  float4 Tmp2 = {sin(In[2].xy), sin(In[2].zw)};
  Out[2] = Tmp2;
}


//--- pipeline.yaml

---
Shaders:
  - Stage: Compute
    Entry: main
    DispatchSize: [1, 1, 1]
Buffers:
  - Name: In
    Format: Float32
    Stride: 16
    Data: [ 0.5235988, -0.7853982, 1.0471976, -0, 0, 1.5707963, -1.5707963, -314.16, 314.16, 3.1415927, -3.1415927, 100.0 ]
    #  pi/6, -pi/4, pi/3, -0, 0, pi/2, -pi/2, -314.16, 314.16, pi, -pi, 100.0
  - Name: Out
    Format: Float32
    Stride: 16
    FillSize: 48
  - Name: ExpectedOut # The result we expect
    Format: Float32
    Stride: 16
    Data: [ 0.5, -0.7071068, 0.8660254, -0, 0, 1.0, -1.0, -0.0007346401, 0.0007346401, 0.0, 0.0, -0.5063656 ]
    #  sin(pi/6), sin(-pi/4), sin(pi/3), -0, 0, sin(pi/2), sin(-pi/2), sin(-314.16), sin(314.16), sin(pi), sin(-pi), sin(100.0)
Results:
  - Result: Test1
    Rule: BufferFloatEpsilon
    Epsilon: 0.0008
    Actual: Out
    Expected: ExpectedOut
DescriptorSets:
  - Resources:
    - Name: In
      Kind: StructuredBuffer
      DirectXBinding:
        Register: 0
        Space: 0
      VulkanBinding:
        Binding: 0
    - Name: Out
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 1
        Space: 0
      VulkanBinding:
        Binding: 1
...
#--- end

# RUN: split-file %s %t
# RUN: %dxc_target -T cs_6_5 -Fo %t.o %t/source.hlsl
# RUN: %offloader %t/pipeline.yaml %t.o
