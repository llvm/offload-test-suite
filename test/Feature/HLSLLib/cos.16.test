#--- source.hlsl

StructuredBuffer<half4> In : register(t0);

RWStructuredBuffer<half4> Out : register(u1);

[numthreads(1,1,1)]
void main() {
  Out[0] = cos(In[0]);
  half4 Tmp = {cos(In[1].xyz), cos(In[1].w)};
  Out[1] = Tmp;
  half4 Tmp2 = {cos(In[2].xy), cos(In[2].zw)};
  Out[2] = Tmp2;
  Out[3] = cos(In[3]);
  Out[4] = cos(In[4]);
}


//--- pipeline.yaml

