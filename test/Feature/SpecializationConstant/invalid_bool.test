#--- invalid_bool.hlsl
[[vk::constant_id(0)]]
const bool spec_bool = false;
RWStructuredBuffer<uint> OutBool : register(u0, space0);

[numthreads(1,1,1)]
void main(uint GI : SV_GroupIndex) {
  OutBool[GI] = (uint)spec_bool;
}
