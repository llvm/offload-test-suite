  - Name: DefaultOut
    Format: Float32
    Channels: 4
    FillSize: 64
    OutputProps:
      Height: 2
      Width: 2
      Depth: 16
  - Name: SpecifiedOut
    Format: Float32
    Channels: 4
    FillSize: 64
    OutputProps:
      Height: 2
      Width: 2
      Depth: 16
  - Name: ExpectedDefaultOut
