        Register: 1
        Space: 0
      VulkanBinding:
        Binding: 1
    - Name: SpecifiedOut
      Kind: RWTexture2D
      DirectXBinding:
        Register: 2
        Space: 0
      VulkanBinding:
        Binding: 2
...
