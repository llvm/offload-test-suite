    Format: Hex32
    Stride: 4
    ZeroInitSize: 4
DescriptorSets:
  - Resources:
    - Name: Out
      Kind: RWStructuredBuffer
      HasCounter: true
      DirectXBinding:
        Register: 0
        Space: 0
...
#--- end

