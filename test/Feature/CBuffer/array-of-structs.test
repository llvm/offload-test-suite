#--- source.hlsl
RWStructuredBuffer<uint> Out : register(u1);

struct S {
  float x[2];
  uint q;
};

cbuffer cb0 : register(b0) {
  uint32_t3 w[3];
  S v[3];
}

[numthreads(4, 1, 1)]
void main(uint GI : SV_GroupIndex) {
  Out[0] = w[1].y;
  Out[1] = w[2].z;
  Out[2] = v[1].q;
  Out[3] = v[2].q;
}

