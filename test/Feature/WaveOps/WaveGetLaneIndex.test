#--- source.hlsl
RWStructuredBuffer<uint> Out : register(u0);

[numthreads(4, 1, 1)]
void main(uint3 threadID : SV_DispatchThreadID) {
  Out[threadID.x] = WaveGetLaneIndex();
}

//--- pipeline.yaml

---
Shaders:
  - Stage: Compute
    Entry: main
    DispatchSize: [2, 1, 1]
Buffers:
  - Name: Out
    Format: UInt32
    Stride: 4
    FillSize: 32
  - Name: ExpectedOut
    Format: UInt32
    Stride: 4
    Data: [0, 1, 2, 3, 0, 1, 2, 3]
Results:
  - Result: Test
    Rule: BufferExact
    Actual: Out
    Expected: ExpectedOut
DescriptorSets:
  - Resources:
    - Name: Out
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 0
        Space: 0
      VulkanBinding:
        Binding: 0
...
#--- end

# RUN: split-file %s %t
# RUN: %dxc_target -T cs_6_5 -Fo %t.o %t/source.hlsl
# RUN: %offloader %t/pipeline.yaml %t.o
