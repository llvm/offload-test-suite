#--- source.hlsl

RWStructuredBuffer<int> OutArray[2] : register(u0);

[numthreads(1,1,1)]
void main() {
  for (int i = 0; i < 2; i++)
    for (int j = 0; j < 4; j++)
      OutArray[i][j] = j * 10 + i; 
}

//--- pipeline.yaml

---
Shaders:
  - Stage: Compute
    Entry: main
    DispatchSize: [1, 1, 1]
Buffers:
  - Name: OutArray
    Format: Int32
    Stride: 4
    ZeroInitSize: 16
    ArraySize: 2
  - Name: ExpectedOutArray
    Format: Int32
    Stride: 4
    ArraySize: 2
    Data:
      - [ 1, 2, 3, 4 ]
      - [ 5, 6, 7, 8 ]
Results:
  - Result: TestOutArray
    Rule: BufferExact
    Actual: OutArray
    Expected: ExpectedOutArray
DescriptorSets:
  - Resources:
    - Name: OutArray
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 0
        Space: 0
      VulkanBinding:
        Binding: 0
...
#--- end

# Offload tests are missing support for resource arrays on Metal
