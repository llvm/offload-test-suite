    Stride: 4
    Fill: 0
    Size: 18
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [1488, 1024, 524320, 1488, 1024, 524320, 1488, 1024, 524320, 1504, 1024, 524320, 1504, 1024, 524320, 1504, 1024, 524320]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
Results:
  - Result: BitTrackingValidation
    Rule: BufferParticipantPattern
    GroupSize: 3
    Actual: _participant_bit
    Expected: expected_bit_patterns
DescriptorSets:
  - Resources:
    - Name: _participant_bit
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 0
