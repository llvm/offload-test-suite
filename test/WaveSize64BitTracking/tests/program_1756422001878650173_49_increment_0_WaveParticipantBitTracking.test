Shaders:
  - Stage: Compute
    Entry: main
    DispatchSize: [1, 1, 1]  # Single dispatch for 64 threads
Buffers:
  - Name: _participant_bit
    Format: UInt32
    Stride: 4
    Fill: 0
    Size: 30
  - Name: expected_bit_patterns
    Format: UInt32
    Stride: 4
    Data: [2176, 0, 1048576, 1792, 1073741824, 262144, 1792, 1073741824, 262144, 1536, 4096, 2097153, 1536, 4096, 2097153, 1536, 4096, 2097153, 2816, 85, 0, 2816, 85, 0, 2816, 85, 0, 2816, 85, 0]
  - Name: _wave_op_index
    Format: UInt32
    Stride: 4
    Data: [0]
Results:
  - Result: BitTrackingValidation
    Rule: BufferParticipantPattern
    GroupSize: 3
    Actual: _participant_bit
    Expected: expected_bit_patterns
DescriptorSets:
  - Resources:
    - Name: _participant_bit
      Kind: RWStructuredBuffer
      DirectXBinding:
        Register: 0
        Space: 0
      VulkanBinding:
        Binding: 0
    - Name: _wave_op_index
